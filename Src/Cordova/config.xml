<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dwsg.pocketdetective" version="0.0.999" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pocket Detective</name>
    <description>
        An interactive fiction game about being a detective.
    </description>
    <author email="me@dickwolff.nl" href="https://github.com/dickwolff/Pocket-Detective">
        Dick Wolff
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
